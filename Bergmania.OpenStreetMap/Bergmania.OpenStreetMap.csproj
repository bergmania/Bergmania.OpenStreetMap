<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <ContentTargetFolders>.</ContentTargetFolders>
        <Title>Bergmania.OpenStreetMap</Title>
        <PackageIcon>icon.png</PackageIcon>
    </PropertyGroup>
    
    <ItemGroup>
        <Content Include="App_Plugins\Bergmania.OpenStreetMap\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)icon.png" Pack="true" PackagePath="" />
    </ItemGroup>
    <ItemGroup>
        <Folder Include="App_Plugins\Bergmania.OpenStreetMap\lib" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Bergmania.OpenStreetMap.Core\Bergmania.OpenStreetMap.Core.csproj" />
    </ItemGroup>
</Project>
