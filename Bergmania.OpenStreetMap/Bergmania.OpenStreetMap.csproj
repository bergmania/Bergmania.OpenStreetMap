<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>net5.0;net6.0</TargetFrameworks>
        <Title>Bergmania.OpenStreetMap</Title>
        <PackageIcon>icon-128.png</PackageIcon>
        <ContentTargetFolders>.</ContentTargetFolders>
    </PropertyGroup>
    
    <ItemGroup>
        <Content Include="App_Plugins\Bergmania.OpenStreetMap\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>
    
    <ItemGroup>
      <None Remove="App_Plugins\Bergmania.OpenStreetMap\lang\da-DK.xml" />
      <None Remove="App_Plugins\Bergmania.OpenStreetMap\lang\en-US.xml" />
    </ItemGroup>
    
    <ItemGroup>
        <Folder Include="App_Plugins\Bergmania.OpenStreetMap\lib" />
    </ItemGroup>
    <ItemGroup>
        <None Include="../assets/icon-128.png" Pack="true" PackagePath="" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\Bergmania.OpenStreetMap.Core\Bergmania.OpenStreetMap.Core.csproj" />
    </ItemGroup>
</Project>
