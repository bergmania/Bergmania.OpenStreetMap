<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <BergmaniaOpenStreetMapContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Bergmania.OpenStreetMap\**\*.*</BergmaniaOpenStreetMapContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyBergmaniaOpenStreetMapAssets" BeforeTargets="Build">
        <ItemGroup>
            <BergmaniaOpenStreetMapContentFiles Include="$(BergmaniaOpenStreetMapContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Bergmania.OpenStreetMap files: $(BergmaniaOpenStreetMapContentFilesPath) - #@(BergmaniaOpenStreetMapContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(BergmaniaOpenStreetMapContentFiles)"
            DestinationFiles="@(BergmaniaOpenStreetMapContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Bergmania.OpenStreetMap\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearBergmaniaOpenStreetMapAssets" BeforeTargets="Clean">
        <ItemGroup>
            <BergmaniaOpenStreetMapDir Include="$(MSBuildProjectDirectory)\App_Plugins\Bergmania.OpenStreetMap\" />
        </ItemGroup>
        <Message Text="Clear old Bergmania.OpenStreetMap data"  Importance="high" />
        <RemoveDir Directories="@(BergmaniaOpenStreetMapDir)"  />
    </Target>

</Project>
